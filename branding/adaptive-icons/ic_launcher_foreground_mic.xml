<?xml version="1.0" encoding="utf-8"?>
<!-- Microphone + Key Hybrid - Foreground -->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="512"
    android:viewportHeight="512">
    
    <group
        android:translateX="256"
        android:translateY="256">
        
        <!-- Mic base -->
        <rect
            android:fillColor="#FFFFFF"
            android:fillAlpha="0.9"
            android:x="-40"
            android:y="40"
            android:width="80"
            android:height="120"
            android:rx="16"
            android:ry="16"/>
        
        <!-- Mic body -->
        <rect
            android:fillColor="#FFFFFF"
            android:x="-30"
            android:y="-80"
            android:width="60"
            android:height="120"
            android:rx="12"
            android:ry="12"/>
        
        <!-- Mic grille lines -->
        <line
            android:strokeColor="#3A7BFF"
            android:strokeWidth="3"
            android:strokeAlpha="0.6"
            android:x1="-25"
            android:y1="-70"
            android:x2="-25"
            android:y2="-10"/>
        <line
            android:strokeColor="#3A7BFF"
            android:strokeWidth="3"
            android:strokeAlpha="0.6"
            android:x1="-10"
            android:y1="-70"
            android:x2="-10"
            android:y2="-10"/>
        <line
            android:strokeColor="#3A7BFF"
            android:strokeWidth="3"
            android:strokeAlpha="0.6"
            android:x1="5"
            android:y1="-70"
            android:x2="5"
            android:y2="-10"/>
        <line
            android:strokeColor="#3A7BFF"
            android:strokeWidth="3"
            android:strokeAlpha="0.6"
            android:x1="20"
            android:y1="-70"
            android:x2="20"
            android:y2="-10"/>
        
        <!-- Mic stand -->
        <rect
            android:fillColor="#A0FFE9"
            android:x="-8"
            android:y="40"
            android:width="16"
            android:height="20"
            android:rx="4"
            android:ry="4"/>
        
        <!-- Sound waves -->
        <path
            android:strokeColor="#A0FFE9"
            android:strokeWidth="6"
            android:strokeLinecap="round"
            android:strokeAlpha="0.8"
            android:fillColor="@android:color/transparent"
            android:pathData="M 0,-90 Q -30,-110 -60,-90"/>
        <path
            android:strokeColor="#A0FFE9"
            android:strokeWidth="6"
            android:strokeLinecap="round"
            android:strokeAlpha="0.8"
            android:fillColor="@android:color/transparent"
            android:pathData="M 0,-90 Q 30,-110 60,-90"/>
    </group>
</vector>












